<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">


    <TextView
        android:id="@+id/hTilteTv"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10dp"
        android:text="@string/title_here"
        android:textColor="#000"
        android:textSize="@dimen/_17sp"
        app:layout_constraintEnd_toStartOf="@id/hPrograssBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/hCommentsTv"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/_10dp"
        android:textSize="@dimen/_14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/hPrograssBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hTilteTv" />

    <ProgressBar
        android:id="@+id/hPrograssBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>